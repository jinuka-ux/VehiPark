<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlotSelectionActivity"
    >
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-12dp"
        app:srcCompat="@drawable/bottom" />
    <TextView
        android:id="@+id/textViewHelp"
        android:layout_width="103dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="800px"
        android:drawableStart="@drawable/ic_help_vector"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Help"
        android:textColor="#ffffff"
        android:textSize="64px"
        android:textStyle="normal" />
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginLeft="300px"
        app:srcCompat="@drawable/steer" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="174px"
        android:layout_height="140px"
        android:layout_marginTop="10px"
        app:srcCompat="@drawable/back" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="420px"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="20px"
        android:shadowColor="#000000"
        android:text="VehiPark"
        android:textColor="#000000"
        android:textSize="72px" />
    <TextView
        android:id="@+id/textDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="180px"
        android:shadowColor="#000000"
        android:text="Slot selection"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textSize="64px" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="300px">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            app:srcCompat="@drawable/selected" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Selected"
            android:textSize="42px"
            android:textColor="@color/black"
            android:layout_marginTop="15px"/>
        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            app:srcCompat="@drawable/available" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Available"
            android:textSize="42px"
            android:textColor="@color/black"
            android:layout_marginTop="15px"/>
        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            app:srcCompat="@drawable/unavailable" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Unavailable"
            android:textSize="42px"
            android:textColor="@color/black"
            android:layout_marginTop="15px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="400px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:fontFamily="@font/montserrat"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="64px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/montserrat"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="64px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/montserrat"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="64px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/montserrat"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="64px" />

    </LinearLayout>


    <ScrollView
        android:layout_width="948px"
        android:layout_height="900px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500px"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="1080px"
            android:layout_height="900px">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="900px"
                android:layout_height="1000px"
                android:id="@+id/recycler_view"
                tools:listitem="@layout/item_slot"
                app:spanCount="4"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>


        </RelativeLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slot"
        android:layout_marginLeft="53px"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="48px"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="1510px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1A1"
        android:id="@+id/slotDisplay"
        android:layout_marginLeft="881px"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="48px"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="1510px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginLeft="53px"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="48px"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="1610px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 100 / hour"
        android:id="@+id/priceDisplay"
        android:layout_marginLeft="633px"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="48px"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="1610px"/>
    <Button
        android:id="@+id/continueSlotSelection"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="600px"
        android:layout_marginTop="1730px"
        android:text="Continue"
        app:cornerRadius="50px"
        app:rippleColor="#F23B5F" />





</RelativeLayout>