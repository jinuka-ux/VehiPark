<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/steer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Change Password"
        android:textSize="96px" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102px"
        android:layout_marginTop="600px"
        android:textStyle="normal"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Current password"
        android:textSize="64px" />

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="900px"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="710px"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102px"
        android:layout_marginTop="820px"
        android:textStyle="normal"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="New password"
        android:textSize="64px" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="900px"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="910px"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102px"
        android:layout_marginTop="1040px"
        android:textStyle="normal"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Retype new password"
        android:textSize="64px" />

    <EditText
        android:id="@+id/retypeNewPassword"
        android:layout_width="900px"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1150px"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>
    <Button
        android:id="@+id/buttonReset"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="599px"
        android:layout_marginTop="1400px"
        android:text="Reset"
        app:cornerRadius="50px"
        app:rippleColor="#F23B5F" />

    <TextView
        android:id="@+id/textViewBackLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102px"
        android:layout_marginTop="1600px"
        android:textStyle="normal"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Forgot password?"
        android:textSize="48px" />
    <TextView
        android:id="@+id/clickHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="550px"
        android:layout_marginTop="1610px"
        android:fontFamily="@font/montserrat"
        android:text="Click here"
        android:textColor="#FF0000"
        android:textSize="36px" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-12dp"
        app:srcCompat="@drawable/bottom" />
    <!--
        <TextView
            android:id="@+id/textView7"
            android:layout_width="1080px"
            android:layout_height="50dp"
            android:layout_marginTop="1800px"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/box"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="48px"
            android:textStyle="normal" />
-->
    <TextView
        android:id="@+id/textViewHelp"
        android:layout_width="103dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/ic_help_vector"
        android:layout_marginLeft="800px"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Help"
        android:textColor="#ffffff"
        android:textSize="64px"
        android:textStyle="normal" />



</RelativeLayout>