<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".BookingDispActivity">
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-12dp"
        app:srcCompat="@drawable/bottom" />
    <TextView
        android:id="@+id/textViewHelp"
        android:layout_width="103dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="800px"
        android:drawableStart="@drawable/ic_help_vector"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Help"
        android:textColor="#ffffff"
        android:textSize="64px"
        android:textStyle="normal" />
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginLeft="300px"
        app:srcCompat="@drawable/steer" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="174px"
        android:layout_height="140px"
        android:layout_marginTop="10px"
        app:srcCompat="@drawable/back" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="420px"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="20px"
        android:shadowColor="#000000"
        android:text="VehiPark"
        android:textColor="#000000"
        android:textSize="72px" />
    <TextView
        android:id="@+id/textDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="180px"
        android:shadowColor="#000000"
        android:text="Bookings"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="50px"
        android:textSize="80px" />
    <ScrollView
        android:layout_width="980px"
        android:layout_height="1470px"
        android:layout_marginTop="300px"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="980px"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="980px"
                android:layout_height="wrap_content"
                android:src="@drawable/bookings1" />
            <TextView
                android:layout_marginTop="70px"
                android:layout_marginLeft="50px"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins"
                android:layout_height="match_parent"
                android:text="Nawaloka Hospital\n10.00 am - 12.00 pm\nCost Rs. 200"/>
            <ImageView
                android:layout_width="980px"
                android:layout_height="wrap_content"
                android:layout_marginTop="250px"
                android:src="@drawable/bookings2"/>
            <ImageView
                android:layout_width="980px"
                android:layout_height="wrap_content"
                android:layout_marginTop="500px"
                android:src="@drawable/bookings1"/>
            <ImageView
                android:layout_width="980px"
                android:layout_height="wrap_content"
                android:layout_marginTop="750px"
                android:src="@drawable/bookings2"/>
            <ImageView
                android:layout_width="980px"
                android:layout_height="wrap_content"
                android:layout_marginTop="1000px"
                android:src="@drawable/bookings1"/>
            <ImageView
                android:layout_width="980px"
                android:layout_height="wrap_content"
                android:layout_marginTop="1250px"
                android:src="@drawable/bookings2"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

