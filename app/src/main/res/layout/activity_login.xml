<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity"
    android:paddingStart="10dp"
    android:paddingEnd="20dp">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/steer" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Hello there!"
        android:textSize="96px" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="600px"
        android:fontFamily="@font/montserrat"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="64px" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="820px"
        android:fontFamily="@font/montserrat"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="64px" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1050px"
        android:fontFamily="@font/montserrat"
        android:text="By loggin into thge account below you accept our"
        android:textColor="#000000"
        android:textSize="36px" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1100px"
        android:fontFamily="@font/montserrat"
        android:text="Terms and Conditions"
        android:textColor="#FF0000"
        android:textSize="36px" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="490px"
        android:layout_marginTop="1100px"
        android:fontFamily="@font/montserrat"
        android:text="Privacy Policy"
        android:textColor="#FF0000"
        android:textSize="36px" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450px"
        android:layout_marginTop="1100px"
        android:fontFamily="@font/montserrat"
        android:text="&amp; "
        android:textColor="#000000"
        android:textSize="36px" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="599px"
        android:layout_marginTop="1200px"
        android:text="Login"
        app:cornerRadius="50px"
        app:rippleColor="#F23B5F" />


    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="700px"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@.1234567890"
        android:text="" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1390px"
        android:fontFamily="@font/montserrat"
        android:text="Forgotten your login details? "
        android:textColor="#000000"
        android:textSize="36px" />
    <TextView
        android:id="@+id/clickHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="580px"
        android:layout_marginTop="1390px"
        android:fontFamily="@font/montserrat"
        android:text="Click here"
        android:textColor="#FF0000"
        android:textSize="36px" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350px"
        android:layout_marginTop="1600px"
        android:fontFamily="@font/montserrat"
        android:text="New User? "
        android:textColor="#000000"
        android:textSize="36px" />

    <TextView
        android:id="@+id/loginBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="550px"
        android:layout_marginTop="1600px"
        android:fontFamily="@font/montserrat"
        android:text="Register"
        android:textColor="#FF0000"
        android:textSize="36px" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="910px"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>


</RelativeLayout>