<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/steer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Forgot Password"
        android:textSize="96px" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Find your account"
        android:textSize="72px" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102px"
        android:layout_marginTop="700px"
        android:textStyle="normal"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Enter your email address \nLinked to your account"
        android:textSize="48px" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102px"
        android:layout_marginTop="1000px"
        android:textStyle="normal"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Email"
        android:textSize="64px" />

    <EditText
        android:id="@+id/forgotPswd"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="102px"
        android:layout_marginTop="1110px"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:hint="example@vehipark.com"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/Edittex" />
    <Button
        android:id="@+id/buttonSendCode"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="599px"
        android:layout_marginTop="1400px"
        android:text="Reset"
        app:cornerRadius="50px"
        app:rippleColor="#F23B5F" />
    <TextView
        android:id="@+id/textViewBackLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102px"
        android:layout_marginTop="1600px"
        android:textStyle="normal"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Back to login"
        android:textSize="48px" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-12dp"
        app:srcCompat="@drawable/bottom" />
    <!--
        <TextView
            android:id="@+id/textView7"
            android:layout_width="1080px"
            android:layout_height="50dp"
            android:layout_marginTop="1800px"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/box"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="48px"
            android:textStyle="normal" />
-->
    <TextView
        android:id="@+id/textViewHelp"
        android:layout_width="103dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/ic_help_vector"
        android:layout_marginLeft="800px"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Help"
        android:textColor="#ffffff"
        android:textSize="64px"
        android:textStyle="normal" />



</RelativeLayout>